{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "drawing-tracker",
  "version": "0.1.0",
  "identifier": "com.drawing-tracker.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "drawing-tracker",
        "width": 200,
        "height": 150,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
